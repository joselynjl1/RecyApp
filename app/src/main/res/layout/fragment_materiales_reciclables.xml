<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.MaterialesReciclablesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/TBMateriales"
                    android:background="#1B232323">
                    <TextView
                        android:id="@+id/TVCabeceraMateriales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Materiales reciclables"
                        android:textStyle="bold"
                        android:textSize="28sp">
                    </TextView>
                </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="53dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVMateriales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_menu">
                <!-- falta agregar     tools:listitem="@layout/itemmateriales">-->
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>